<UserControl x:Class="MyShows.UI.Views.Episode.Details"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Style="{DynamicResource BackButtonView}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{DynamicResource HeaderStyle}"  Text="{Binding Title}" />
        <StackPanel Grid.Row="1">
            <Button x:Name="Download">Download</Button>
            <Button x:Name="SaveSubtitles">Save subtitles</Button>
        </StackPanel>
        <ListBox>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ContentPresenter cal:View.Context="List" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
