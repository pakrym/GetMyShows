<UserControl x:Class="MyShows.UI.Views.Episode.Details"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Style="{DynamicResource BackButtonView}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{DynamicResource HeaderStyle}"  Text="{Binding Title}"  />
        <ListBox x:Name="Torrents" SelectionMode="Multiple" Grid.Row="1">
        </ListBox>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="Download" Style="{DynamicResource MetroCircleButtonStyle}" Content="{DynamicResource appbar_cloud_download}"/>
            <Button x:Name="Play" Style="{DynamicResource MetroCircleButtonStyle}" Content="{DynamicResource appbar_play}"/>
        </StackPanel>
        

    </Grid>
</UserControl>
